<Page
    x:Class="GameBox.GameMemory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Navy">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='2' x:Name="backButton" Content="Back" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"                   />
        <TextBlock x:ConnectionId='3' x:Name="level" Text="Level :" HorizontalAlignment="Center" Grid.Column="5" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBlock x:ConnectionId='4' x:Name="playerLabel" Text="Player :" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBlock x:ConnectionId='5' x:Name="playerNameLabel" Text="" HorizontalAlignment="Center" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center"/>
        <Image x:ConnectionId='6' x:Name="card0" Source="..\Assets\card-back.png" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Grid.Column="2" MinHeight="50" MinWidth="50" Margin="20"                     />
        <Image x:ConnectionId='7' x:Name="card1" Source="..\Assets\card-back.png" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Grid.Column="3" MinHeight="50" MinWidth="50" Margin="20"                     />
        <Image x:ConnectionId='8' x:Name="card2" Source="..\Assets\card-back.png" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Grid.Column="2" MinHeight="50" MinWidth="50" Margin="20"                     />
        <Image x:ConnectionId='9' x:Name="card3" Source="..\Assets\card-back.png" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Grid.Column="3" MinHeight="50" MinWidth="50" Margin="20"                     />
        <TextBox x:ConnectionId='10' x:Name="test" Grid.Column="1" Grid.Row="1"></TextBox>
    </Grid>
</Page>

